<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal">

        <ImageView
            android:id="@+id/ic_hdr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_a_datang"/>


        <TextView
            android:id="@+id/txt_absen_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Absen Kedatangan Anda Berhasil Dikirim !"
            android:textAppearance="@style/absen_after_txt"/>

        <TextView
            android:id="@+id/txt_absen_remark_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/absen_after_txt_2"
            android:text="Selalu awali Pekerjaan Dengan Mengucap Bismillah"/>

        <ImageView
            android:id="@+id/btn_bckhp"
            android:onClick="backTohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_a_button_bckhp"/>

    </LinearLayout>

</LinearLayout>