    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progres_bar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cpb_background_progressbar_color="#66BF84"
            app:cpb_background_progressbar_width="18dp"
            app:cpb_progress="60"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="@color/green_pesantren_2"
            app:cpb_progressbar_width="24dp"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/progres_bar"
            app:layout_constraintEnd_toEndOf="@id/progres_bar"
            app:layout_constraintStart_toStartOf="@id/progres_bar"
            app:layout_constraintTop_toTopOf="@id/progres_bar">

            <TextView
                android:id="@+id/progress_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textColor="@color/green_pesantren_2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progress_hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="134/288 hari"
                android:textColor="#66BF84" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/txt_hadir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hadir"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/num_hadir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="99 hari"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/txt_cuti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ijin &amp; Cuti"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/num_ijin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 hari"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/txt_alpha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Alpha"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/num_alpha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 hari"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_terlambat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terlambat"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/num_terlambat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 jam 50 menit"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

